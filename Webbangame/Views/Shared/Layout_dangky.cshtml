<!DOCTYPE html>
<html>
<head style="background-color:gray">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/CSSuser/StyleSheet1.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('../../Hinhsanpham/background.jpg');
        }
    </style>
</head>


<body>
    <div class="navbar navbar-inverse " style="background:border-box">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div>
                    @Html.Action("LoGo", "GameStore")
                </div>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-weight:bold;color:white;font-size:30px">

                    <li>@Html.ActionLink("Home", "Index", "GameStore")</li>
                    <li>@Html.ActionLink("Login", "Dangnhap", "Nguoidung")</li>
                    <li>@Html.ActionLink("New Account", "Dangky", "Nguoidung")</li>
                </ul>




            </div>
        </div>

    </div>


    <div class="container" style="margin-top:20px">
        <div>
            <div class="col-md-3">

                <div style="background-color:steelblue; text-align:center;color:whitesmoke">
                    <!-- cot san pham theo the loai-->
                    @Html.Action("TheLoai", "GameStore")
                </div>
                <div style="background-color:steelblue; text-align:center;color:whitesmoke">
                    <!-- cot san pham theo nha phat trien-->
                    @Html.Action("NhaPhatTrien", "GameStore")
                </div>
                <div style="background-color:steelblue; text-align:center;color:whitesmoke">
                    <!-- cot san pham theo nha phat hanh-->
                    @Html.Action("NhaPhatHanh", "GameStore")
                </div>
            </div>
            <div>
                <div class="container body-content">
                
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>






    <div style="background:border-box">
        <!--footer-->
        <div class="container" style="margin-top:50px">
            <div>
                <div class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </div>
                @Html.Action("LienHe", "GameStore", new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-weight:bold;color:black"></ul>
            </div>
        </div>

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



</body>
</html>


