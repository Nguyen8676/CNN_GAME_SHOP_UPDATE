
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/Layout_dangky.cshtml";
}
<table align="center">
<h2 style="text-align:center;color:white">Đăng ký thành viên</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px;color:white">
            <td>Họ tên khách hàng:</td>
            <td> @Html.TextBox("HotenKH")
                @ViewData["Loi1"]
            </td>
        </tr>


        <tr style="height:40px;color:white">
            <td>Tên đăng nhập</td>
            <td>
                @Html.TextBox("TenDN")
                @ViewData["Loi2"]
            </td>
        </tr>


        <tr style="height:40px;color:white">
            <td>Mật Khẩu</td>
            <td>
                @Html.TextBox("Matkhau")
                @ViewData["Loi3"]
            </td>
        </tr>


        <tr style="height:40px;color:white">
            <td>Mật Khẩu nhập lại</td>
            <td>
                @Html.TextBox("Matkhaunhaplai")
                @ViewData["Loi4"]
            </td>
        </tr>

        <tr
            style="height:40px;color:white">
            <td>EMAIL</td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi5"]
            </td>
        </tr>

        <tr
            style="height:40px;color:white">
            <td>Điện thoại</td>
            <td>
                @Html.TextBox("Dienthoai")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px;color:white">
            <td>Ngày sinh :</td>
            <td>
                <input type="date" name="Ngaysinh" />
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng ký" />
            </td>
    </tr>
    }
</table>
    