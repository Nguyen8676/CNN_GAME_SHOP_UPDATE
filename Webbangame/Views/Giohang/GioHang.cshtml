@using Webbangame.Models;
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center;color:cornflowerblue">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="7">
    <tr style="text-align:center;font-weight:bold;color:cornflowerblue">
        <td> Mã game</td>
        <td> Tên game</td>
        <td> Ảnh bìa</td>
        <td> Số lượng</td>
        <td> Đơn giá</td>
        <td> Thành tiền</td>
    </tr>
    @foreach(var item in Model)
    {
        <tr style="text-align:center;font-weight:bold;color:cornflowerblue">
            <td>@item.iMaGame</td>
            <td>@item.sTenGame</td>
            <td><img src="~/Hinhsanpham/@item.sAnhbia"</td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSP = item.iMaGame }))
            {
            <td>
              <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:white" />
            </td>
            <td style="color:cornflowerblue">@String.Format("{0:0,0}", item.dDongia)</td>
            <td style="color:cornflowerblue">@String.Format("{0:0,0}", item.dThanhtien)</td>
            <td><a href="@Url.Action("Details","GameStore",new {id=item.iMaGame })">Chi tiết</a></td>
            <td>@Html.ActionLink("DELETE", "XoaGiohang", new { @iMaSP = item.iMaGame })</td>
            <td><input type="submit" value="Cập nhật" /></td>
            }
        </tr>
    }
    <tr style="font-weight:bold;text-align:right;color:cornflowerblue">
        <td style="color:cornflowerblue" colspan="4">Số lượng game: @ViewBag.Tongsoluong</td>
        <td style="color:cornflowerblue" colspan ="5">Tổng tiền: @String.Format("{0:0,0}",ViewBag.Tongtien) VND</td>
    </tr>
    <tr style="font-weight:bold;color:blue;text-align:right">
        <td colspan="9">
            @Html.ActionLink("Xóa giỏ hàng","XoaTatcaGiohang")
        </td>
    </tr>

</table>

